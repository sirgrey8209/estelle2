{
  "dev": {
    "name": "Development",
    "envId": 2,
    "relay": {
      "port": 3000,
      "url": "ws://localhost:3000",
      "pm2Name": "estelle-relay-dev"
    },
    "pylon": {
      "pylonIndex": "1",
      "relayUrl": "ws://localhost:3000",
      "pm2Name": "estelle-pylon-dev",
      "configDir": "~/.claude",
      "credentialsBackupDir": "~/.claude-credentials",
      "mcpPort": 9878,
      "dataDir": "./dev-data"
    },
    "client": {
      "port": 5173,
      "pm2Name": "estelle-client-dev",
      "title": "Estelle (dev)"
    }
  },
  "stage": {
    "name": "Staging",
    "envId": 1,
    "relay": {
      "port": 8080,
      "url": "wss://your-app-name-stage.fly.dev",
      "flyApp": "your-app-name-stage"
    },
    "pylon": {
      "pylonIndex": "1",
      "relayUrl": "wss://your-app-name-stage.fly.dev",
      "pm2Name": "estelle-pylon-stage",
      "configDir": "~/.claude",
      "credentialsBackupDir": "~/.claude-credentials",
      "mcpPort": 9877,
      "dataDir": "./stage-data"
    },
    "client": {
      "title": "Estelle"
    }
  },
  "release": {
    "name": "Production",
    "envId": 0,
    "relay": {
      "port": 8080,
      "url": "wss://your-app-name.fly.dev",
      "flyApp": "your-app-name"
    },
    "pylon": {
      "pylonIndex": "1",
      "relayUrl": "wss://your-app-name.fly.dev",
      "pm2Name": "estelle-pylon",
      "configDir": "~/.claude",
      "credentialsBackupDir": "~/.claude-credentials",
      "mcpPort": 9876,
      "dataDir": "./release-data"
    },
    "client": {
      "title": "Estelle"
    }
  }
}
